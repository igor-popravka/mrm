{% extends "auth-base.html.twig" %}

{% block tittle %}{{ parent()}} | Reset Password{% endblock %}

{% block content %}
    <div class="card card-login mx-auto mt-5">
        <div class="card-header">Reset Password</div>
        <div class="card-body">
            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    <div class="alert alert-{{ label }}" role="alert">
                        {{ message }}
                    </div>
                {% endfor %}
            {% endfor %}

            {% if form %}
            <div class="text-center mt-4 mb-5">
                <h4>Forgot your password?</h4>
                <p>Enter your email and we will send you instructions on how to reset your password.</p>
            </div>
            {{ form_start(form) }}
                <div class="form-group">
                    {{ form_widget(form.login, {'attr':{'class': 'form-control', 'placeholder': 'Enter email'}}) }}
                </div>
                {{ form_widget(form.submit, {'attr': {'class': 'btn btn-primary btn-block'}}) }}
                {{ form_end(form) }}
            {{ form_end(form) }}
            {% endif %}

            <div class="text-center mt-3">
                <a class="d-block small" href="{{ path ('route_login') }}">Sign In page</a>
            </div>
        </div>
    </div>
{% endblock %}