{% extends "mrm-base.html.twig" %}

{% block breadcrumb %}
    {{ parent() }}
    <li class="breadcrumb-item">
        <a href="{{ path('route_section_managers') }}">Managers</a>
    </li>
    <li class="breadcrumb-item active">New</li>
{% endblock %}

{% block content %}
    <!-- Managers DataTables -->
    <div class="card mb-3">
        <div class="card-header">
            <i class="fa fa-user"></i> Manager data
        </div>
        <div class="card-body">
            {{ form_start(form) }}
            {% if form.vars.errors|length > 0 %}
                <div class="alert alert-danger" role="alert">
                    {{ form_errors(form) }}
                </div>
            {% endif %}

            <div class="form-group">
                {{ form_label(form.login) }}
                {{ form_widget(form.login, {'attr':{'class': 'form-control', 'placeholder': 'Enter Username'}}) }}
            </div>
            <div class="form-group">
                {{ form_label(form.role) }}
                {{ form_widget(form.role, {'attr':{'class': 'form-control', 'placeholder': 'Set Role'}}) }}
            </div>
            <div class="form-group">
                {{ form_label(form.status) }}
                {{ form_widget(form.status, {'attr':{'class': 'form-control', 'placeholder': 'Set Status'}}) }}
            </div>
            {{ form_row(form._token) }}
            {{ form_widget(form.submit, {'attr': {'class': 'btn btn-primary btn-block'}}) }}
            {{ form_end(form, {'render_rest': false}) }}
        </div>
        <div class="card-footer small text-muted"></div>
    </div>
{% endblock %}